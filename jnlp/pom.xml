  <dependencies>
    <dependency>
      <groupId>org.codehaus.mojo.webstart</groupId>
      <artifactId>webstart-jnlp-servlet</artifactId>
    </dependency>
  </dependencies>

  <pluginRepositories>
          <pluginRepository>
                  <id>java.net</id>
                  <url>http://download.java.net/maven/2</url>
                  <!-- url>http://download.java.net/maven/glassfish</url> -->
